@model MyProject.Models.Card
@{
    ViewBag.Title = "Edit Card";
}

<h2>Edit Card</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">

            @Html.LabelFor(x => x.CardNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.CardNumber, new { @class = "form-control" })
            </div>
            
            
            <br />


            <div class="form-group">
                <div class="col-md-offset-2 col-lg-1 md-10">
                    <input type="submit" name="submit" value="Save Changes" />
                </div>

            </div>

        </div>
        <br />
        <div>
            @Html.ActionLink("Back to Customers", "Index")
        </div>






    </div>

}

